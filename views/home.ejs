<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>URL Shortener </h1>

    <div>

        <form method="POST" action="/url">
            <label for="Url">Enter your Original URL: </label>
            <input type="text" name="url" placeholder="https://url.com">
            <button type="submit">Generate</button>
        </form>
    </div>

    <h1>Hello, <%= name %>!</h1>




    <div class="allUrlsInfo">
        <table border="1">
            <thead>
            <tr>
                <th>S.No</th>
                <th>Org URL</th>
                <th>URL</th>
                <th>Clicks</th>
            </tr>
            </thead>
            <tbody>
            <% urls.forEach((url, index) => { %>
                <tr>
                <td><%= index + 1 %></td>
                <td><%= url.redirectUrl %></td>
                <td><%= url.shortId %></td>
                <td><%= url.visitHistory.length %></td>
                </tr>
            <% }) %>
            </tbody>
        </table>


        
    </div>


</body>
</html>